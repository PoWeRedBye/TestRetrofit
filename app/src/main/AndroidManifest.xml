<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.maxim_ozarovskiy.testretrofitrestapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk tools:overrideLibrary="org.lucasr.twowayview, org.lucasr.twowayview.widget, jp.wasabeef.recyclerview" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/one_day"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/one_day"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ComboActivity"
            android:label="My Weather App"
            android:theme="@style/ForecastTheme">
        </activity>
        <activity android:name=".Details"
            android:label="My Weather App"
            android:theme="@style/ForecastTheme">

        </activity>
        <activity android:name=".CityAdd"
            android:label="My Weather App"
            android:theme="@style/ForecastTheme">

        </activity>
        <activity
            android:name=".CityCheckListActivity"
            android:label="@string/title_activity_city_check_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>