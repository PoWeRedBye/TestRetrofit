<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="#2aa3cc"
    card_view:cardCornerRadius="25dp"
    card_view:cardElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:text="You really want delete this City?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_above="@+id/btn_yes"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp" />


        <Button
            android:id="@+id/btn_yes"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/yes_cropped"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_text"
            android:layout_alignStart="@+id/tv_text"
            android:layout_marginBottom="23dp"/>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="@drawable/no_cropped"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_text"
        android:layout_alignEnd="@+id/tv_text" />
    </RelativeLayout>
</android.support.v7.widget.CardView>