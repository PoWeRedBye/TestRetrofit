<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/constraint_layout">

    <TextView
        android:id="@+id/current_temp_combo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="25 'C"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weather_status_combo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/one_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_code_combo"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="UA"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city_name_combo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:text="Kharkiv"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_max_text_combo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp"
        android:text="25 'C"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintLeft_toRightOf="@+id/temp_min_text_combo"
        app:layout_constraintRight_toLeftOf="@+id/temp_max_text_combo"
        app:layout_constraintTop_toBottomOf="@+id/city_name_combo" />

    <TextView
        android:id="@+id/temp_min_text_combo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="60dp"
        android:text="20 'C"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wind_speed_icon_combo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wind_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_max_text_combo" />

    <ImageView
        android:id="@+id/wind_degree_icon_combo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/compass_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_max_text_combo" />

    <ImageView
        android:id="@+id/humidity_icon_combo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/humidity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wind_speed_icon_combo" />

    <ImageView
        android:id="@+id/pressure_icon_combo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/pressure"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wind_degree_icon_combo" />

    <TextView
        android:id="@+id/wind_speed_text_combo"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="21dp"
        android:text="5 m/s"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/wind_speed_icon_combo"
        app:layout_constraintTop_toBottomOf="@+id/temp_min_text_combo" />

    <TextView
        android:id="@+id/wind_degree_text_combo"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="21dp"
        android:text="North-West"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_max_text_combo" />

    <TextView
        android:id="@+id/humidity_text_combo"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="50"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/humidity_icon_combo"
        app:layout_constraintTop_toBottomOf="@+id/wind_speed_text_combo" />

    <TextView
        android:id="@+id/pressure_text_combo"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="1008 hPA"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/pressure_icon_combo"
        app:layout_constraintTop_toBottomOf="@+id/wind_degree_text_combo" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/weather_status_combo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>