<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="15dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:weightSum="1">

       <!-- <TextView
            android:id="@+id/weather_status_text"
            android:layout_width="100dp"
            android:layout_height="35dp"
            card_view:layout_constraintRight_toLeftOf="@+id/date"
            android:layout_marginRight="0dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" />-->

        <TextView
            android:id="@+id/date_card"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            card_view:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/weather_status_card"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:background="@drawable/one_day"
            card_view:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/temp_day_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/date"
            android:background="@drawable/temp_day_icon"
            tools:layout_editor_absoluteY="45dp"
            tools:ignore="MissingConstraints"
            card_view:layout_constraintRight_toLeftOf="@+id/text_temp_niht_card"
            android:layout_marginRight="0dp" />

        <ImageView
            android:id="@+id/temp_niht_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_temp_niht_card"
            android:background="@drawable/temp_night_icon"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="14dp"
            card_view:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/text_temp_day_card"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="25 'C"
            android:textAlignment="center"
            android:textSize="30sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            card_view:layout_constraintRight_toLeftOf="@+id/temp_day_card"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/text_temp_niht_card"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="30sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            card_view:layout_constraintRight_toLeftOf="@+id/temp_niht_card"
            android:layout_marginRight="0dp" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>